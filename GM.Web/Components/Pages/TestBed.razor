@page "/test"
@using GM.Core.Repositories
@using GM.Core.Data

@inject GMDbContext context
<h3>Transactions</h3>
<table>
	<thead>
		<th>ID</th>
		<th>Timestamp</th>
		<th>Amount</th>
		<th>Method</th>
		<th>MemberId</th>
	</thead>
	<tbody>
		@foreach (var transaction in context.Transactions)
		{
			<tr>
				<td>@transaction.Id.ToString()</td>
				<td>@transaction.Timestamp.ToShortTimeString()</td>
				<td>@transaction.Amount.ToString()</td>
				<td>@transaction.Method.ToString()</td>
				<td>@transaction.MemberId.ToString()</td>
			</tr>
		}
	</tbody>
</table>

<h3>Members</h3>
<table>
	<thead>
	<th>Id</th>
	<th>FirstName</th>
	<th>LastName</th>
	<th>Email</th>
	<th>Phone</th>
	<th>BirthDate</th>
	<th>Address</th>
	<th>PostalCode</th>
	<th>MembershipType</th>
	<th>MemberId</th>
	<th>CardId</th>
	<th>StartDate</th>
	<th>CancelDate</th>
	<th>EndDate</th>
	<th>InstitutionNumber</th>
	<th>BranchNumber</th>
	<th>AccountNumber</th>
	</thead>
	<tbody>
		@foreach (var member in context.Members)
		{
			<tr>
				<td>@member.Id.ToString()</td>
				<td>@member.FirstName.ToString()</td>
				<td>@member.LastName.ToString()</td>
				<td>@member.Email.ToString()</td>
				<td>@member.Phone.ToString()</td>
				<td>@member.BirthDate.ToShortDateString()</td>
				<td>@member.Address.ToString()</td>
				<td>@member.PostalCode.ToString()</td>
				<td>@member.MembershipType.ToString()</td>
				<td>@member.CardId.ToString()</td>
				<td>@member.StartDate.ToShortDateString()</td>
				<td>@member.CancelDate.ToString()</td>
				<td>@member.EndDate.ToString()</td>
				<td>@member.InstitutionNumber.ToString()</td>
				<td>@member.BranchNumber.ToString()</td>
				<td>@member.AccountNumber.ToString()</td>
			</tr>
		}
	</tbody>
</table>

